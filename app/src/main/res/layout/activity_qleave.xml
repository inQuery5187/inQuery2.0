<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qleave"
    android:background="@drawable/backgroundquery">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat"
            android:text="Date:"
            android:textColor="#8A76FF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiver" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backgroundtop" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="69dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat"
            android:text="Reason:"
            android:textColor="#8A76FF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Leave" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/montserrat"
            android:text="To:"
            android:textColor="#8A76FF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text=" LEAVE APPLICATION"
            android:textColor="#7268A5"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />


        <EditText
            android:id="@+id/rreason"
            android:layout_width="327dp"
            android:layout_height="113dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/querytextboxbig"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Describe a reason for leave"
            android:inputType="textMultiLine"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#7268A5"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/receiver"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/querytextbox"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp"
            android:text="Choose Reciever"
            android:textColor="#B5B5B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Leave"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/querytextbox"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp"
            android:text="Choose Date"
            android:textColor="#B5B5B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/lsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rreason"
            app:srcCompat="@drawable/button_medium" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/lsubmit"
            app:layout_constraintEnd_toEndOf="@+id/lsubmit"
            app:layout_constraintStart_toStartOf="@+id/lsubmit"
            app:layout_constraintTop_toTopOf="@+id/lsubmit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>