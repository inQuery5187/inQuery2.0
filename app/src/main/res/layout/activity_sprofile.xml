<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".s_profile">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backgroundTop"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backgroundtop" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="STUDENT PROFILE"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundTop"
            app:layout_constraintEnd_toEndOf="@+id/backgroundTop"
            app:layout_constraintStart_toStartOf="@+id/backgroundTop"
            app:layout_constraintTop_toTopOf="@id/backgroundTop" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/profileBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:minHeight="400dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundTop"
            android:background="@drawable/profilebox">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/montserrat"
            android:text="Placeholder Name"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/profileBox"
            app:layout_constraintStart_toStartOf="@+id/profileBox"
            app:layout_constraintTop_toTopOf="@+id/profileBox" />

        <TextView
            android:id="@+id/studentUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Admission Number"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/profileBox"
            app:layout_constraintStart_toStartOf="@+id/profileBox"
            app:layout_constraintTop_toBottomOf="@+id/studentName" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat"
            android:text="Course:"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="@+id/profileBox"
            app:layout_constraintTop_toBottomOf="@+id/studentUsername" />

            <TextView
                android:id="@+id/courseEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserrat"
                android:text="course"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/studentUsername" />

            <TextView
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Branch:"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/course" />

            <TextView
                android:id="@+id/branchEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="branch"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/courseEntry" />

            <TextView
                android:id="@+id/yearnSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Year and Sec:"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/branch" />

            <TextView
                android:id="@+id/yearnSecEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="yearnsec"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/branchEntry" />

            <TextView
                android:id="@+id/rollNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Roll No.:"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/yearnSec" />

            <TextView
                android:id="@+id/rollNoEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="roll no."
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/yearnSecEntry" />

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Phone No.:"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/rollNo" />

            <TextView
                android:id="@+id/phoneNoEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="********09"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/rollNoEntry" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Email:"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/phoneNo" />

            <TextView
                android:id="@+id/emailEntry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="tt******************@abes.ac.in"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:layout_marginLeft="150dp"
                app:layout_constraintStart_toStartOf="@+id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/phoneNoEntry" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/logoutbtn"
                app:layout_constraintEnd_toEndOf="@id/profileBox"
                app:layout_constraintTop_toBottomOf="@+id/emailEntry" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/profilePicBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundTop"
            app:srcCompat="@drawable/background_pic" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/text"
            android:text="version 0.1.0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileBox" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
